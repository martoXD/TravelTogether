@model TravelTogether.ViewModels.Account.MyProfileViewModel

@{
    ViewData["Title"] = "MyProfile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Links{
    <link rel="stylesheet" type="text/css" href="~/css/myProfile.css" />
}

<div class="container emp-profile">
    <div class="row">
        <div class="col-md-4">
            @if (Model.ProfileImageId == null)
            {
                <div class="profile-img">
                    <img src="~/images/default_icon.jpg" alt="" />
                </div>
            }
            else
            {
                <div class="profile-img">
                    <img src="@Model.ProfileImageSrc" alt="" />
                </div>
            }
        </div>
        <div class="col-md-6 my_profile_headers">
            <div class="profile-head">
                <h5>
                    @Model.FirstName @Model.LastName
                </h5>
                <div class="my_aboutMeDescription_profile">
                    <h3>About me</h3>
                    @if (Model.AboutMeDescription is null)
                    {
                        <p>- - Empty - -</p>
                    }
                    else
                    {
                        <p>@Model.AboutMeDescription</p>
                    }
                </div>
                <ul class="nav nav-tabs" id="myTab" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">Profile</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">Images</a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="col-md-2">
            <a href="/Account/Edit?id=@this.Model.Id" class="profile-edit-btn" name="btnAddMore">
                Edit Profile
            </a>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
        </div>
        <div class="col-md-8">
            <div class="tab-content profile-tab" id="myTabContent">
                <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                    <div class="row">
                        <div class="col-md-6">
                            <label class="my_label_myProfile">Username</label>
                        </div>
                        <div class="col-md-6">
                            <p>@Model.UserName</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <label class="my_label_myProfile">First Name</label>
                        </div>
                        <div class="col-md-6">
                            <p>@Model.FirstName</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <label class="my_label_myProfile">Last Name</label>
                        </div>
                        <div class="col-md-6">
                            <p>@Model.LastName</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <label class="my_label_myProfile">Country</label>
                        </div>
                        <div class="col-md-6">
                            <p>@Model.Country</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <label class="my_label_myProfile">City</label>
                        </div>
                        <div class="col-md-6">
                            <p>@Model.City</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <label class="my_label_myProfile">Age</label>
                        </div>
                        <div class="col-md-6">
                            @if (Model.Age == 0)
                            {
                                <p>- - Empty - -</p>
                            }
                            else
                            {
                                <p>@Model.Age</p>
                            }
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <label class="my_label_myProfile">Gender</label>
                        </div>
                        <div class="col-md-6">
                            <p>@Model.Gender.ToString()</p>
                        </div>
                    </div>
                </div>
                <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
                    <div class="row">
                        @if (Model.Images != null)
                        {
                            @foreach (var image in Model.Images)
                            {
                                <div class="col-md-2">
                                    <img class="ui tiny image my_userImages" src="@image.ImageSource" />
                                </div>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
