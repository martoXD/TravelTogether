@model TravelTogether.ViewModels.Account.UserProfileViewModel

@{
    ViewData["Title"] = "Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Links{
    <link rel="stylesheet" type="text/css" href="~/css/profile.css" />
}

<div class="row my_profile_row">
    <div class="col-md-6 d-flex justify-content-center">
        <div id="myCarousel" class="carousel slide" data-ride="carousel">

            <!-- Wrapper for slides -->
            <div class="carousel-inner" role="listbox">
                @{ int i = 0; }
                @foreach (var image in Model.Images)
                {
                    i++;
                    var active = i == 1 ? "active" : "";
                    <div class="carousel-item @active">
                        <img src="@image.ImageSource" alt="Image" width="600" height="400" />
                    </div>
                }
                @if (Model.Images.Count == 0)
                {
                    <div class="carousel-item active">
                        <img src="@Model.DefaultImageSrc" alt="Image" width="600" height="400" />
                    </div>
                }
            </div>

            <!-- Left and right controls -->
            <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
    <div class="col-md-6 details">
        <blockquote>
            <h5>@Model.FirstName @Model.LastName (@Model.UserName)</h5>
            <h5>About Me: @Model.AboutMeDescription</h5>
            <small>
                <cite title="Source Title">
                    @Model.Country, @Model.City
                </cite>
            </small>
        </blockquote>
        <p>
            Age: @Model.Age<br>
            Gender: @Model.Gender<br>
        </p>
    </div>
</div>

@section Scripts{
    <script type="text/javascript" src="~/js/profile.js"></script>
}
