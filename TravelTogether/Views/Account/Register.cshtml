@model TravelTogether.ViewModels.Account.RegisterInputModel

@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Links{
    <link rel="stylesheet" type="text/css" href="~/css/register.css" />
}

<div class="owl">
    <div class="hand"></div>
    <div class="hand hand-r"></div>
    <div class="arms">
        <div class="arm"></div>
        <div class="arm arm-r"></div>
    </div>
</div>
<form asp-controller="Account" asp-action="Register">
    <div class="register-form">
        <div class="control">
            <input asp-for="UserName" placeholder="Username"/>
            <span asp-validation-for="UserName"></span>
        </div>
        <div class="control">
            <input asp-for="Password" placeholder="Password"/>
            <span asp-validation-for="Password"></span>
        </div>
        <div class="control">
            <input asp-for="ConfirmPassword" placeholder="Confirm Password"/>
            <span asp-validation-for="ConfirmPassword"></span>
        </div>
        <div class="control">
            <input asp-for="FirstName" placeholder="First Name"/>
            <span asp-validation-for="FirstName"></span>
        </div>
        <div class="control">
            <input asp-for="LastName" placeholder="Last Name"/>
            <span asp-validation-for="LastName"></span>
        </div>
        <div class="control">
            <input asp-for="Country" placeholder="Country"/>
            <span asp-validation-for="Country"></span>
        </div>
        <div class="control">
            <input asp-for="City" placeholder="City"/>
            <span asp-validation-for="City"></span>
        </div>
        <div class="control">
            <span class="ui grey inverted header">Male : </span>@Html.RadioButtonFor(m => m.Gender, "Male", new { id = "Gender1" })
            <span asp-validation-for="Gender"></span>
            <span class="ui grey inverted header">Female : </span>@Html.RadioButtonFor(m => m.Gender, "Female", new { id = "Gender2" })
        </div>
        <div class="control">
            <button type="submit" class="ui secondary button">Register</button>
        </div>
    </div>  
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <script src="~/js/register.js"></script>
}
