@inject UserManager<IdentityUser> UserManager

@{
    ViewData["Title"] = "Home Page";
    var currentUser = await UserManager.GetUserAsync(this.User);
    var isAuthenthicated = this.User?.Identity?.IsAuthenticated;
}

@section Links{
    <link rel="stylesheet" type="text/css" href="~/css/posts.css" />
    <link rel="stylesheet" type="text/css" href="~/css/index.css" />
}

@if (isAuthenthicated.HasValue && isAuthenthicated.Value)
{
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-3">
                <div class="ui teal card my_card">
                    <div class="content">
                        <div class="right floated meta">
                            <span class="ui grey inverted header">@DateTime.Now.Year</span>
                        </div>
                        <img class="ui avatar image" src="~/images/sample.jpg">
                        <span class="ui grey inverted header my_username_header">martoXD</span>
                    </div>
                    <div class="image">
                        <img src="~/images/sample.jpg" />
                    </div>
                    <div class="content">
                        <span class="right floated">
                            <i class="heart outline like icon"></i>
                            <span>17 likes</span>
                        </span>
                        <i class="comment icon"></i>
                        <span>3 comments</span>
                        <div class="d-flex justify-content-center">
                            <a href="#" data-toggle="modal" data-target="#post_Modal">
                                <span class="dot"></span>
                                <span class="dot"></span>
                                <span class="dot"></span>
                            </a>
                        </div>
                    </div>
                    <div class="extra content">
                        <div class="ui large transparent left icon input">
                            <i class="heart outline icon"></i>
                            <input class="postInput" type="text" placeholder="Add Comment...">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="sidebar bg-dark">
        <div class="ui middle aligned selection list">
            <div class="item">
                <img class="ui avatar image" src="~/images/sample.jpg">
                <div class="content">
                    <div class="header">Helen</div>
                </div>
                <div class="my_content_friendUser">
                    <i class="envelope outline icon ml-3"></i>
                    <i class="clone outline icon ml-3"></i>
                    <i class="trash alternate outline icon ml-3"></i>
                </div>
            </div>
            <div class="item">
                <img class="ui avatar image" src="~/images/sample.jpg">
                <div class="content">
                    <div class="header">Christian</div>
                </div>
                <div class="my_content_friendUser">
                    <i class="envelope outline icon ml-3"></i>
                    <i class="clone outline icon ml-3"></i>
                    <i class="trash alternate outline icon ml-3"></i>
                </div>
            </div>
            <div class="item">
                <img class="ui avatar image" src="~/images/sample.jpg">
                <div class="content">
                    <div class="header">Daniel</div>
                </div>
                <div class="my_content_friendUser">
                    <i class="envelope outline icon ml-3"></i>
                    <i class="clone outline icon ml-3"></i>
                    <i class="trash alternate outline icon ml-3"></i>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-3">
                <div class="ui teal card my_card">
                    <div class="content">
                        <div class="right floated meta">
                            <span class="ui grey inverted header">@DateTime.Now.Year</span>
                        </div>
                        <img class="ui avatar image" src="~/images/sample.jpg">
                        <span class="ui grey inverted header my_username_header">martoXD</span>
                    </div>
                    <div class="image">
                        <img src="~/images/sample.jpg" />
                    </div>
                    <div class="content">
                        <span class="right floated">
                            <i class="heart outline like icon"></i>
                            <span>17 likes</span>
                        </span>
                        <i class="comment icon"></i>
                        <span>3 comments</span>
                    </div>
                    <div class="extra content">
                        <div class="d-flex justify-content-center">
                            <a href="#" data-toggle="modal" data-target="#post_Modal">
