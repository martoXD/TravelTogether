@*PostModal*@
<div class="modal fade" id="post_Modal">
    <div class="modal-dialog">
        <div class="modal-content my_modal">
            <div class="modal-body">
                <a href="#" class="close" data-dismiss="modal">&times;</a>
                <div class="ui card my_card_modal">
                    <div class="content">
                        <div class="right floated meta">
                            <span class="ui grey inverted header">@DateTime.Now.Year</span>
                        </div>
                        <img class="ui avatar image my_modal_avatar_image" src="~/images/sample.jpg">
                        <span class="ui grey inverted header my_username_header_modal">martoXD</span>
                    </div>
                    <div class="image">
                        <img src="~/images/sample.jpg" />
                    </div>
                    <div class="content">
                        <span class="right floated">
                            <i class="heart outline like icon"></i>
                            <span>17 likes</span>
                        </span>
                        <i class="comment icon"></i>
                        <span>3 comments</span>
                    </div>
                    <div class="extra content">
                        <div class="ui comments">
                            <div class="comment">
                                <a class="avatar">
                                    <img src="~/images/sample.jpg">
                                </a>
                                <div class="content">
                                    <a class="author">Stevie Feliciano</a>
                                    <div class="metadata">
                                        <div class="date">2 days ago</div>
                                    </div>
                                    <div class="text">
                                        Hey guys, I hope this example comment is helping you read this documentation.
                                    </div>
                                </div>
                            </div>
                        </div>
                        @if (isAuthenthicated.HasValue && isAuthenthicated.Value)
                        {
                            <form id="my_post_modal_form">
                                <div class="form-group my_form-group_modal">
                                    <textarea class="form-control" rows="3" placeholder="Add Comment..."></textarea>
                                </div>
                                <div class="d-flex justify-content-around">
                                    <a href="#" onclick="sendComment()" class="ui black button">Add Comment</a>
                                </div>
                            </form>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/js/index.js"></script>
}
